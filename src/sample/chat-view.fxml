<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml"
      alignment="center">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>
    <TextArea fx:id="chatsDisplay" VBox.vgrow="ALWAYS" editable="false"/>

    <HBox spacing="20">

        <TextField fx:id="userAnswer" HBox.hgrow="ALWAYS"/>
        <Button fx:id = "button" text="Send" defaultButton="true" onAction="#clickSendButton"/>

    </HBox>



</VBox>



