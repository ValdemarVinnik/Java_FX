<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:controller="sample.client.ChatController" xmlns:fx="http://javafx.com/fxml"
      alignment="center">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>


    <HBox spacing="20">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10"/>
        </padding>
        <VBox>
            <HBox fx:id="authBox">
                <TextField fx:id="loginField" promptText="login"/>
                <PasswordField fx:id="passField" promptText="password"/>
                <Button text="Sign in" onAction="#signinBtnClick"/>
            </HBox>
            <HBox fx:id="messageBox" visible="false">
                <VBox>
                    <TextArea fx:id="messageArea" VBox.vgrow="ALWAYS" editable="false"/>
                    <HBox spacing="10">
                        <TextField fx:id="messageField" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="button" text="Send" defaultButton="true" onAction="#clickSendButton"/>
                    </HBox>
                </VBox>
                <VBox>
                    <Button text="Sign out" onAction="#signOutClick"/>
                    <ListView fx:id="clientList" minWidth="200" onMouseClicked="#selectClients"/>
                </VBox>
            </HBox>
        </VBox>
    </HBox>
</VBox>



